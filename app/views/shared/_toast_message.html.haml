- message = notice.presence || alert.presence
- if message.present?
  .toast-message.toast.show.align-items-center.text-white{ class: notice.present? ? 'bg-success' : 'bg-danger'}
    .d-flex
      .toast-body
        = message
      %button.btn-close.btn-close-white.me-2.m-auto{"aria-label" => "Close", "data-bs-dismiss" => "toast", :type => "button"}
